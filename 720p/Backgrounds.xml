<includes>
	
	<!-- bg-movies -->
	<include name="bg-movies">
		<control type="image">
		    <visible>[Window.IsActive(home) + Container(9000).HasFocus(1)] | [Window.IsActive(videofiles) + Skin.HasSetting(movies)]</visible>
		    <texture>bg-movies.png</texture>
		    <width>1280</width>
		    <height>720</height>
			<animation effect="fade" delay="0" time="500">VisibleChange</animation>
		</control>
	</include>

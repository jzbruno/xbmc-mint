<window id="3">

	<defaultcontrol>20</defaultcontrol>
	<allowoverlay>no</allowoverlay>

	<controls>
	
		<!-- background -->
		<include>bg-system</include>
		<control type="image">
			<texture>white2x2.png</texture>
			<width>1280</width>
			<height>720</height>
			<colordiffuse>ff20281b</colordiffuse>
		</control>
		
